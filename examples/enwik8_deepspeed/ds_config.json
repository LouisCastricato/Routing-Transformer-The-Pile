{
  "train_batch_size": 1050,
  "gradient_accumulation_steps": 350,
  "steps_per_print": 2000,
  "max_grad_norm": 0.5,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.0001,
      "betas": [
        0.8,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 0.0
    }
  },
  "gradient_clipping": 0.5,
  "fp16": {
    "enabled": true
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 0.0001,
      "warmup_num_steps": 50
    }
  },
  "zero_optimization": true,
  "wall_clock_breakdown": false
}
